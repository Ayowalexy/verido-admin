        <script>
                   
                (function() {
                    const pubnub = new PubNub({
                        publishKey: "pub-c-3272fe08-52e8-4278-826d-98a0cc703878",
                        subscribeKey: "sub-c-afe58600-7616-11ec-add2-a260b15b99c5",
                        uuid: `admin-${data}`,
                        // uuid: 'myUniqueUUIDI',
                    });
                    function $(id) {
                        return document.getElementById(id);
                    }
                    let box = $('chat-detail'),
                        input = $('input'),
                        send = $('btn-sm-send'),
                        // channel = 'chat';
                        channel = `chat-${data}`;

                    pubnub.addListener({
                        message: function(obj) {
                            box.innerHTML = box.innerHTML + (`
                                <div class="media">
                                    
                                    <div class="media-body ${obj.publisher === `admin-${data}` ? 'reverse' : 'not-reverse'}">
                                        <div class="chat-msg">
                                            <p>${obj.message}</p>
                                        </div>
                                        
                                    </div>
                                   
                                </div>
                            `)

                            // await axios.post(`https://verido-2-ihdqs.ondigitalocean.app/new-admin-message/${current_admin}`, {
                            // await axios.post(`http://localhost:5000/new-admin-message/${current_admin}`, {
                            //     message: obj.message,
                            //     to: `${data}`,
                            //     from: `${current_admin}`
                            // }).then(response => console.log(response.data.messege))

                        }
                    });
                    pubnub.subscribe({
                        channels: [channel]
                    });
                    input.addEventListener('keyup', function(e) {
                        if ((e.keyCode || e.charCode) === 13) {
                            pubnub.publish({
                                channel: channel,
                                message: input.value,
                                x: (input.value = '')
                            });
                        }
                    });
                    send.addEventListener('click', function(e) {
                            pubnub.publish({
                                channel: channel,
                                message: input.value,
                                x: (input.value = '')
                            });
                    });
                })();

        </script>


