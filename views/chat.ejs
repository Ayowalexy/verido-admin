        <script src="/socket.io/socket.io.js"></script>
        <script>
            let socket = io('http://localhost:8000')

            socket.on('message.sent', function(data){
                $('#messages').prepend(`
                    <div class="chat-msg">
                        <p>${data.message}</p>
                    </div>  
                `)
            })

            $(function(){
                $('#messages-form').on('submit', function(e){
                    e.preventDefault()
                    socket.emit('message-send', {
                        message: $('#message').val()
                    })

                })
            })
        </script>
        
